                            <div class="alert alert-success text-center" role="alert">
                                <span><i class="fas fa-check-circle mr-2"></i><%= success %>
                            </div>
                            <% } %>
                        </div>
                        
                        <!-- Row 1 -->
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3><span><%= (dashQuery1Re || 0).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span><sup style="font-size: 20px" class="ml-2">บัญชี</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">พนักงานทั้งหมด<br>ข้อมูล ณ วันที่ <span id="date-info-1"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3><span><%= (dashQuery2Re || 0).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span><sup style="font-size: 20px" class="ml-2">บัญชี</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">ลูกค้าทั้งหมด<br>ข้อมูล ณ วันที่ <span id="date-info-2"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3><span><%= (dashQuery3Re || 0).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span><sup style="font-size: 20px" class="ml-2">รูปแบบ</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">รูปแบบชำระเงินทั้งหมด<br>ข้อมูล ณ วันที่ <span id="date-info-3"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="far fa-credit-card"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3><span><%= (dashQuery4Re || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span><sup style="font-size: 20px" class="ml-2">บาท</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">ยอดขายรวมทั้งสิ้น<br>ข้อมูล ณ วันที่ <span id="date-info-4"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                            </div>
                        </div>
                        <!-- Row 1 End -->

                        <!-- Row 2 -->
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3><span><%= (dashQuery5Re || 0).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span><sup style="font-size: 20px" class="ml-2">รายการ</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">ออเดอร์ทั้งหมด<br>ข้อมูล ณ วันที่ <span id="date-info-5"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-bag"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3><span><%= (dashQuery6Re || 0).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span><sup style="font-size: 20px" class="ml-2">รายการ</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">สินค้าทั้งหมด<br>ข้อมูล ณ วันที่ <span id="date-info-6"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="far fa-folder-open"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3><span><%= (dashQuery7Re || 0).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span><sup style="font-size: 20px" class="ml-2">รายการ</sup></h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">หมวดหมู่หลักทั้งหมด<br>ข้อมูล ณ วันที่ <span id="date-info-7"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="far fa-folder-open"></i>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="small-box bg-light">
                                <div class="inner">
                                    <h3>แดชบอร์ด</h3>
                                    <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">ข้อมูลรายงานสรุป<br>ข้อมูล ณ วันที่ <span id="date-info-8"></span></p>
                                </div>
                                <div class="icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                            </div>
                        </div>
                        <!-- Row 2 End -->

                        <!-- Row 3 -->
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card">
                                <div class="card-header" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">กราฟรายงานแสดงยอดสินค้ายอดนิยม 12 รายการ</div>
                                <div class="card-body">
                                    <div class="chart">
                                        <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                <div class=""></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink">
                                                <div class=""></div>
                                            </div>
                                        </div>
                                        <canvas id="myChart3" style="min-height: 343px; height: 400px; max-height: 343px; max-width: 100%; display: block; width: 470px;" width="470" height="400" class="chartjs-render-monitor"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card">
                                <div class="card-header" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">กราฟรายงานแสดงยอดขายสินค้าประจำเดือน มกราคม - ธันวาคม ประจำปี</div>
                                <div class="card-body">
                                    <div class="chart">
                                        <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                <div class=""></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink">
                                                <div class=""></div>
                                            </div>
                                        </div>
                                        <canvas id="myChart4" style="min-height: 343px; height: 400px; max-height: 343px; max-width: 100%; display: block; width: 470px;" width="470" height="400" class="chartjs-render-monitor"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Row 3 End -->

                        <!-- Row 4 -->
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card">
                                <div class="card-header" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">กราฟรายงานแสดงยอดบัญชีพนักงาน และ ลูกค้าทั้งหมด</div>
                                <div class="card-body">
                                    <div class="chart">
                                        <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                <div class=""></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink">
                                                <div class=""></div>
                                            </div>
                                        </div>
                                        <canvas id="myChart1" style="min-height: 343px; height: 400px; max-height: 343px; max-width: 100%; display: block; width: 470px;" width="470" height="400" class="chartjs-render-monitor"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6">
                            <div class="card">
                                <div class="card-header" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">กราฟรายงานแสดงยอดรูปแบบชำเงินยอดนิยม</div>
                                <div class="card-body">
                                    <div class="chart">
                                        <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                <div class=""></div>
                                            </div>
                                            <div class="chartjs-size-monitor-shrink">
                                                <div class=""></div>
                                            </div>
                                        </div>
                                        <canvas id="myChart2" style="min-height: 343px; height: 400px; max-height: 343px; max-width: 100%; display: block; width: 470px;" width="470" height="400" class="chartjs-render-monitor"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Row 4 End -->
                        
                    </div>
                </div>
            </section>
            <!-- Main content End -->
        </div>        
        <!-- Content Wrapper. Contains page content End -->

        <!-- Footer -->
        <%- include('../../Include/Footer.ejs') %>
        <!-- Footer End -->

    </div>
    <!-- Wrapper End -->

    <!-- Javascript -->
    <%- include('../../Include/Javascript.ejs') %>
    <script>
        // Chart 1
        const ctx1 = document.getElementById('myChart1');

        new Chart(ctx1, {
            type: 'pie',
            data: {
                labels: ['เจ้าของร้าน', 'พนักงาน', 'ลูกค้า'],
                datasets: [{
                    label: ' ยอดบัญชีผู้ใช้ ',
                    data: [<%= dashQuery0Re %>, <%= dashQuery1Re %>, <%= dashQuery2Re %>],
                    borderWidth: 2,
                    borderColor: ['#ffffff', '#ffffff', '#ffffff'],
                    backgroundColor: ['#ff6384', '#36A2EB', '#ff9020'],
                    hidden: false
                }],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'กราฟรายงานแสดงยอดบัญชีพนักงาน และ ลูกค้าทั้งหมด',
                    },
                    subtitle: {
                        display: true,
                        text: 'รายงาน บัญชีพนักงาน และ ลูกค้า',
                    }
                }
            }
        });
        // Chart 1 End
    </script>
    <script>
        // Chart 2
        const ctx2 = document.getElementById('myChart2').getContext('2d');
    
        new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['เงินสด', 'บัญชีธนาคาร', 'พร้อมเพย์'],
                datasets: [{
                    label: ' รูปแบบชำเงินยอดนิยม ',
                    data: <%- paymentData %>,
                    borderWidth: 2,
                    borderColor: ['#ffffff', '#ffffff', '#ffffff'],
                    backgroundColor: ['#ff6384', '#36A2EB', '#ff9020'],
                    hidden: false
                }],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'กราฟรายรายงานแสดงรูปแบบชำเงินยอดนิยม',
                    },
                    subtitle: {
                        display: true,
                        text: 'รายงาน รูปแบบชำเงินยอดนิยม',
                    }
                }
            }
        });
        // Chart 2 End
    </script>
        <script>
            // Chart 3
            const ctx3 = document.getElementById('myChart3').getContext('2d');
        
            new Chart(ctx3, {
                type: 'bar',
                data: {
                    labels: <%- topProductLabels %>,
                    datasets: [{
                        label: ' สินค้ายอดนิยม ',
                        data: <%- topProductData %>,
                        borderWidth: 2,
                        borderColor: '#36A2EB',
                        backgroundColor: '#9BD0F5',
                        hidden: false
                    }],
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true
                        },
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'กราฟรายงานแสดงยอดสินค้ายอดนิยม 12 รายการ',
                        },
                        subtitle: {
                            display: true,
                            text: 'รายงาน สินค้ายอดนิยม 12 รายการ',
                        }
                    }
                }
            });

            // Adjust the canvas height based on the chart content
            function adjustCanvasHeight() {
                const canvas = document.getElementById('myChart4');
                const chartArea = myChart.chartArea;
                if (chartArea) {
                    canvas.style.height = `${chartArea.bottom - chartArea.top}px`;
                }
            }

            // Call this function to adjust height after rendering
            myChart.options.animation.onComplete = adjustCanvasHeight;
            // Chart 3 End
        </script>        
        <script>
            // Chart 4
            const ctx4 = document.getElementById('myChart4').getContext('2d');
        
            new Chart(ctx4, {
                type: 'bar',
                data: {
                    labels: <%- monthlyLabels %>,
                    datasets: [{
                        label: ' ยอดขายรายเดือนประจำปี ',
                        data: <%- monthlyData %>,
                        borderWidth: 2,
                        borderColor: '#36A2EB',
                        backgroundColor: '#9BD0F5',
                        hidden: false
                    }],
                },
                options: {
                    responsive: true,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true
                        },
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: 'รายงานแสดงยอดขายสินค้ารายเดือน มกราคม - ธันวาคม',
                        },
                        subtitle: {
                            display: true,
                            text: 'รายงานยอดขายสินค้ารายเดือน',
                        }
                    }
                }
            });
            // Chart 4 End
        </script>          
    <!-- Javascript End -->
</body>
</html>