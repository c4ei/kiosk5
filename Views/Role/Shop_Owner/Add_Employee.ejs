<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../Include/Head.ejs') %>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <!-- Wrapper -->
    <div class="wrapper">

        <!-- Preloader -->
        <%- include('../../Include/Preloader.ejs') %>
        <!-- Preloader End -->

        <!-- Navbar -->
        <%- include('../../Include/Navbar.ejs') %>
        <!-- Navbar End -->

        <!-- Main Sidebar -->
        <%- include('../../Include/Role/Shop_Owner/Shop_Owner_Sidebar.ejs') %>
        <!-- Main Sidebar End -->

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>เพิ่มบัญชีพนักงาน</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Shop_Owner/Page/Dashbord';">หน้าหลัก</a></li>
                                <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Shop_Owner/Page/Manage_Employee_Users';">ปรับปรุงบัญชีพนักงาน</a></li>
                                <li class="breadcrumb-item active">เพิ่มบัญชีพนักงาน</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Content Header End (Page header) -->
        
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
        
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">

                                    <% if (error) { %>
                                    <div class="alert alert-danger text-center" role="alert">
                                        <span><i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
                                    </div>
                                    <% } %>
                                    <% if (success) { %>
                                    <div class="alert alert-success text-center" role="alert">
                                        <span><i class="fas fa-check-circle mr-2"></i><%= success %>
                                    </div>
                                    <% } %>

                                    <form action="" class="needs-validation" novalidate method="POST">
                                        <div class="form-group row">
                                            <label for="member_firstname" class="col-sm-2 col-form-label required">ชื่อจริง</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg" name="member_firstname" id="member_firstname" placeholder="ชื่อจริง" value="<%= formData ? formData.first_name : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกชื่อจริงถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกชื่อจริงให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_lastname" class="col-sm-2 col-form-label required">นามสกุล</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg" name="member_lastname" id="member_lastname" placeholder="นามสกุล" value="<%= formData ? formData.last_name : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกนามสกุลถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกนามสกุลให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_email" class="col-sm-2 col-form-label required">ที่อยู่อีเมล์</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control form-control-lg" name="member_email" id="member_email" placeholder="ที่อยู่อีเมล์" value="<%= formData ? formData.username : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกที่อยู่อีเมล์ถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกที่อยู่อีเมล์ให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_tel" class="col-sm-2 col-form-label required">หมายเลขโทรศัพท์</label>
                                            <div class="col-sm-10">
                                                <input type="tel" class="form-control form-control-lg" name="member_tel" id="member_tel" placeholder="หมายเลขโทรศัพท์" value="<%= formData ? formData.phone_number : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกหมายเลขโทรศัพท์ถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกหมายเลขโทรศัพท์ให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="role_id" class="col-sm-2 col-form-label required">ระดับผู้ใช้งานบัญชี</label>
                                            <div class="col-sm-10">
                                                <select class="form-control form-control-lg" name="role_id" id="role_id" required>
                                                    <option value="" selected disabled>เลือกระดับผู้ใช้งาน</option>
                                                    <option value="ROLE001">เจ้าของร้าน</option>
                                                    <option value="ROLE002">แคชเชียร์</option>
                                                </select>
                                                <div class="valid-feedback">
                                                    เลือกระดับผู้ใช้งานถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณาเลือกระดับผู้ใช้งานให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <button type="submit" class="btn btn-custom-one btn-lg btn-block">บันทึกข้อมูล</button>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <button type="reset" class="btn btn-custom-two btn-lg btn-block">รีเซ็ตฟอร์ม</button>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <div onclick="location.href='/Role/Shop_Owner/Page/Manage_Employee_Users';" class="btn btn-custom-two btn-lg btn-block">ย้อนกลับ</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </section>
            <!-- Main content End -->
        </div>        
        <!-- Content Wrapper. Contains page content End -->

        <!-- Footer -->
        <%- include('../../Include/Footer.ejs') %>
        <!-- Footer End -->

    </div>
    <!-- Wrapper End -->

    <!-- Javascript -->
    <%- include('../../Include/Javascript.ejs') %>
    <!-- Javascript End -->
</body>
</html>