<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../Include/Head.ejs') %>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <!-- Wrapper -->
    <div class="wrapper">

        <!-- Preloader -->
        <%- include('../../Include/Preloader.ejs') %>
        <!-- Preloader End -->

        <!-- Navbar -->
        <%- include('../../Include/Navbar.ejs') %>
        <!-- Navbar End -->

        <!-- Main Sidebar -->
        <%- include('../../Include/Role/Shop_Owner/Shop_Owner_Sidebar.ejs') %>
        <!-- Main Sidebar End -->

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>เพิ่มบัญชีลูกค้า</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Shop_Owner/Page/Dashbord';">หน้าหลัก</a></li>
                                <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Shop_Owner/Page/Manage_Customer_Users';">ปรับปรุงบัญชีลูกค้า</a></li>
                                <li class="breadcrumb-item active">เพิ่มบัญชีลูกค้า</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Content Header End (Page header) -->
        
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
        
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">

                                    <% if (error) { %>
                                    <div class="alert alert-danger text-center" role="alert">
                                        <span><i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
                                    </div>
                                    <% } %>
                                    <% if (success) { %>
                                    <div class="alert alert-success text-center" role="alert">
                                        <span><i class="fas fa-check-circle mr-2"></i><%= success %>
                                    </div>
                                    <% } %>

                                    <form action="" class="needs-validation" novalidate method="POST">
                                        <div class="form-group row">
                                            <label for="member_firstname" class="col-sm-2 col-form-label required">ชื่อจริง</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg" name="member_firstname" id="member_firstname" placeholder="มานี" value="<%= formData ? formData.member_firstname : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกชื่อจริงถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกชื่อจริงให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_lastname" class="col-sm-2 col-form-label required">นามสกุล</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg" name="member_lastname" id="member_lastname" placeholder="มานะ" value="<%= formData ? formData.member_lastname : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกนามสกุลถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกนามสกุลให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_email" class="col-sm-2 col-form-label required">ที่อยู่อีเมล์</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control form-control-lg" name="member_email" id="member_email" placeholder="example@gmail.com" value="<%= formData ? formData.member_email : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกที่อยู่อีเมล์ถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกที่อยู่อีเมล์ให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_username" class="col-sm-2 col-form-label required">ชื่อผู้ใช้</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg" name="member_username" id="member_username" placeholder="example.e@pos" value="<%= formData ? formData.member_username : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกชื่อผู้ใช้ถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกชื่อผู้ใช้ให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_password" class="col-sm-2 col-form-label required">รหัสผ่าน</label>
                                            <div class="col-sm-10">
                                                <input type="password" class="form-control form-control-lg" name="member_password" id="member_password" placeholder="example.e@pos" value="<%= formData ? formData.member_password : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกรหัสผ่านถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกรหัสผ่านให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="member_tel" class="col-sm-2 col-form-label required">หมายเลขโทรศัพท์</label>
                                            <div class="col-sm-10">
                                                <input type="tel" class="form-control form-control-lg" name="member_tel" id="member_tel" placeholder="0981234567" value="<%= formData ? formData.member_tel : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกหมายเลขโทรศัพท์ถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกหมายเลขโทรศัพท์ให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <button type="submit" class="btn btn-custom-one btn-lg">บันทึกข้อมูล</button>
                                                <button type="reset" class="btn btn-custom-two btn-lg">รีเซ็ตฟอร์ม</button>
                                                <div onclick="location.href='/Role/Shop_Owner/Page/Manage_Customer_Users';" class="btn btn-custom-two btn-lg">ย้อนกลับ</div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </section>
            <!-- Main content End -->
        </div>        
        <!-- Content Wrapper. Contains page content End -->

        <!-- Footer -->
        <%- include('../../Include/Footer.ejs') %>
        <!-- Footer End -->

    </div>
    <!-- Wrapper End -->

    <!-- Javascript -->
    <%- include('../../Include/Javascript.ejs') %>
    <!-- Javascript End -->
</body>
</html>