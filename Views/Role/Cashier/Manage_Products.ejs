    <!DOCTYPE html>
    <html lang="en">
    <head>
        <%- include('../../Include/Head.ejs') %>
    </head>
    <body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
        <!-- Wrapper -->
        <div class="wrapper">

            <!-- Preloader -->
            <%- include('../../Include/Preloader.ejs') %>
            <!-- Preloader End -->

            <!-- Navbar -->
            <%- include('../../Include/Navbar.ejs') %>
            <!-- Navbar End -->

            <!-- Main Sidebar -->
            <%- include('../../Include/Role/Cashier/Cashier_Sidebar.ejs') %>
            <!-- Main Sidebar End -->

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>ปรับปรุงสินค้า</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Cashier/Page/Make_a_Trading_Transaction';">หน้าหลัก</a></li>
                                    <li class="breadcrumb-item active">ปรับปรุงสินค้า</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Content Header End (Page header) -->
            
                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
            
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">

                                        <% if (error) { %>
                                        <div class="alert alert-danger text-center" role="alert">
                                            <span><i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
                                        </div>
                                        <% } %>
                                        <% if (success) { %>
                                        <div class="alert alert-success text-center" role="alert">
                                            <span><i class="fas fa-check-circle mr-2"></i><%= success %>
                                        </div>
                                        <% } %>
                                        
                                        <form class="needs-validation" novalidate method="GET" action="">
                                            <div class="form-row">
                                                
                                                <!-- ส่วนแผงควบคุม -->
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-4 mb-3">
                                                    <div class="btn-group btn-group-radius btn-block">
                                                        <div class="btn btn-secondary btn-lg txt_cut" onclick="location.href='/Role/Cashier/Page/Manage_Products/Print/Label';"><i class="fas fa-print mr-2"></i>สั่งพิมพ์ฉลากสินค้า</div>
                                                        <div class="btn btn-secondary btn-lg txt_cut" onclick="location.href='/Role/Cashier/Page/Manage_Products/Print/Report';"><i class="fas fa-print mr-2"></i>สั่งพิมพ์รายงานสินค้า</div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-2 mb-3">
                                                    <div class="btn-group btn-group-radius btn-block">
                                                        <div class="btn btn-success btn-lg txt_cut" onclick="location.href='/Role/Cashier/Page/Manage_Products/Add_Product';"><i class="fas fa-plus-circle mr-2"></i>เพิ่มสินค้า</div>
                                                    </div>
                                                </div>
                                                <% if (search) { %>
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-2 mb-3">
                                                    <div class="btn-group btn-group-radius btn-block">
                                                        <div class="btn btn-info btn-lg txt_cut" onclick="location.href='/Role/Cashier/Page/Manage_Products';"><i class="fas fa-chevron-circle-left mr-2"></i>ย้อนกลับ</div>
                                                    </div>
                                                </div>
                                                <% } else { %>
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-2"></div>
                                                <% } %>
                                                <!-- ส่วนแผงควบคุม -->

                                                <!-- ส่วนสำหรับเลือกรูปแบบการแสดงผล -->
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-1 mb-3">
                                                    <div class="btn-group btn-group-radius btn-block">
                                                        <div class="btn btn-outline-secondary btn-lg active"><i class="fas fa-th-list"></i></div>
                                                        <div class="btn btn-outline-secondary btn-lg"><i class="fas fa-th"></i></div>
                                                    </div>
                                                </div>
                                                <!-- ส่วนสำหรับเลือกรูปแบบการแสดงผล -->

                                                <!-- ส้วนค้นหาข้อมูล -->
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-2 mb-3">
                                                    <input type="text" class="form-control form-control-lg input-anti input-search" name="search" placeholder="รหัสสินค้า, สินค้า, หมวดหมู่" required autocomplete="off" autofocus value="<%= search %>">
                                                    <div class="valid-feedback">
                                                        กรอกข้อมูลค้นหาถูกต้อง
                                                    </div>
                                                    <div class="invalid-feedback">
                                                        กรุณากรอกข้อมูลค้นหาให้ถูกต้อง
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-1 mb-3">
                                                    <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fas fa-search mr-2"></i>ค้นหา</button>
                                                </div>
                                                <!-- ส้วนค้นหาข้อมูล -->
                                                
                                            </div>
                                        </form>
                                        <div class="table-responsive">
                                            <table class="mb-0 table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th class="text-center" scope="col">รหัสสินค้า</th>
                                                        <th scope="col">หมวดหมู่หลัก</th>
                                                        <th scope="col">หมวดหมู่ย่อย</th>
                                                        <th scope="col">ชื่อสินค้า</th>
                                                        <th scope="col">ราคาสินค้า</th>
                                                        <th scope="col">จำนวนหน่วย</th>
                                                        <th class="text-center" scope="col">ดำเนินการ</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="body-anti">
                                                    <% if (products.length === 0) { %>
                                                        <tr>
                                                            <td colspan="9" class="text-center">
                                                                <% if (search) { %>
                                                                ไม่เจอข้อมูลที่ค้นหา
                                                                <% } else { %>
                                                                ไม่มีข้อมูลในฐานข้อมูล
                                                                <% } %>
                                                            </td>
                                                        </tr>
                                                    <% } else { %>
                                                        <% products.forEach((product, index) => { %>
                                                        <tr>
                                                            <th class="text-middle"><%= (currentPage - 1) * 5 + index + 1 %></th>
                                                            <td class="text-middle text-center">
                                                                <svg class="barcode" jsbarcode-format="CODE128" jsbarcode-value="<%= product.product_id %>" jsbarcode-textmargin="5" jsbarcode-fontoptions="normal" jsbarcode-fontsize="12" jsbarcode-width="1" jsbarcode-height="20"></svg>
                                                            </td>
                                                            <td class="text-middle"><%= product.cat_name_main %><br><span class="text-success">หมวดหลัก</span></td>
                                                            <td class="text-middle"><%= product.cat_name_sub %><br><span class="text-success">หมวดย่อย</span></td>
                                                            <td class="text-middle"><%= product.product_name %> ราคา x<%= product.product_unit_number %> หน่วย<br><span class="text-success">สินค้า</span></td>
                                                            <td class="text-middle">฿<%= product.product_price.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %><br><span class="text-success">ราคา</span></td>
                                                            <td class="text-middle">x<%= product.product_unit_number.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %><br><span class="text-success">หน่วย</span></td>
                                                            <td class="text-middle text-center">
                                                                <div class="btn-group btn-group-radius">
                                                                    <div class="btn btn-info btn-sm" onclick="copyDataInfo('<%= product.product_id %>');"><i class="fas fa-copy"></i></div>
                                                                    <div class="btn btn-success btn-sm" onclick="location.href='/Role/Cashier/Page/Manage_Products/View/<%= product.product_id %>';"><i class="fas fa-eye"></i></div>
                                                                    <div class="btn btn-warning btn-sm" onclick="location.href='/Role/Cashier/Page/Manage_Products/Edit/<%= product.product_id %>';"><i class="fas fa-edit"></i></div>
                                                                    <div class="btn btn-danger btn-sm" data-toggle="modal" data-target="#<%= product.product_id %>"><i class="fas fa-trash-alt"></i></div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <!-- Modal -->
                                                        <div class="modal fade" id="<%= product.product_id %>" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="<%= product.member_id %>Label" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                    <h5 class="modal-title" id="<%= product.product_id %>Label"><b>ยืนยันลบข้อมูล</b></h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true"><i class="fas fa-times-circle"></i></span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body text-center">
                                                                        <div class="mb-3">
                                                                            <i class="fas fa-exclamation-triangle" style="font-size: 3rem;"></i>
                                                                        </div>
                                                                        คุณแน่ใจหรือไม่ว่าต้องการลบรายการนี้ ?<br><b>(<%= product.product_id %>) <%= product.product_name %></b>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <div class="col-12">
                                                                            <div class="row">
                                                                                <div class="col-6">
                                                                                    <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">ยกเลิก</button>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <button type="button" class="btn btn-primary btn-block" onclick="location.href='/Role/Cashier/Page/Manage_Products/Delete/<%= product.product_id %>';">ยืนยันลบข้อมูล</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% }) %>
                                                    <% } %>
                                                </tbody>                                            
                                            </table>
                                        </div>
                                        <% if (products.length > 0) { %>
                                        <nav class="col-12" aria-label="Page navigation mt-3">
                                            <div class="justify-content-center text-center mt-2 mb-2">
                                                <span>ข้อมูลทั้งหมด <%= totalRecords.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %> เรคคอร์ด</span><br>
                                                <span id="total-pages">หน้า <%= currentPage.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %> ของทั้งหมด <%= totalPages.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></span>
                                            </div>
                                            
                                            <% if (totalPages > 1) { %>
                                            <ul class="pagination justify-content-center m-0" id="pagination">
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link prev-page-custom" href="?page=1<%= search ? '&search=' + search : '' %>"><i class="fas fa-angle-double-left"></i></a>
                                                </li>
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link prev-page-custom" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>"><i class="fas fa-angle-left"></i></a>
                                                </li>
                                                <% 
                                                let startPage = Math.max(currentPage - 1, 1);
                                                let endPage = Math.min(startPage + 2, totalPages);
                                                if (endPage - startPage < 2 && startPage > 1) {
                                                    startPage = endPage - 2;
                                                }
                                                for (let i = startPage; i <= endPage; i++) { 
                                                %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link page-number-custom" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                                                    </li>
                                                <% } %>
                                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                    <a class="page-link next-page-custom" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>"><i class="fas fa-angle-right"></i></a>
                                                </li>
                                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                    <a class="page-link next-page-custom" href="?page=<%= totalPages %><%= search ? '&search=' + search : '' %>"><i class="fas fa-angle-double-right"></i></a>
                                                </li>
                                            </ul>
                                            <% } %>
                                        
                                        </nav>
                                        <% } %>
                                    </div>
                                    <div class="card-footer text-center"><i class="fas fa-clock mr-2"></i>ข้อมูล ณ วันที่ <span id="date-info-1"></span></div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </section>
                <!-- Main content End -->
            </div>        
            <!-- Content Wrapper. Contains page content End -->

            <!-- Footer -->
            <%- include('../../Include/Footer.ejs') %>
            <!-- Footer End -->

        </div>
        <!-- Wrapper End -->

        <!-- Javascript -->
        <%- include('../../Include/Javascript.ejs') %>
        <!-- Javascript End -->
    </body>
    </html>