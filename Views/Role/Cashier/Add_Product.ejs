<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../Include/Head.ejs') %>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <!-- Wrapper -->
    <div class="wrapper">

        <!-- Preloader -->
        <%- include('../../Include/Preloader.ejs') %>
        <!-- Preloader End -->

        <!-- Navbar -->
        <%- include('../../Include/Navbar.ejs') %>
        <!-- Navbar End -->

        <!-- Main Sidebar -->
        <%- include('../../Include/Role/Cashier/Cashier_Sidebar.ejs') %>
        <!-- Main Sidebar End -->

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>เพิ่มสินค้า</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Cashier/Page/Make_a_Trading_Transaction';">หน้าหลัก</a></li>
                                <li class="breadcrumb-item"><a class="text-primary" style="cursor: pointer;" onclick="location.href='/Role/Cashier/Page/Manage_Products';">ปรับปรุงสินค้า</a></li>
                                <li class="breadcrumb-item active">เพิ่มสินค้า</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Content Header End (Page header) -->
        
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
        
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">

                                    <% if (error) { %>
                                    <div class="alert alert-danger text-center" role="alert">
                                        <span><i class="fas fa-exclamation-triangle mr-2"></i><%= error %>
                                    </div>
                                    <% } %>
                                    <% if (success) { %>
                                    <div class="alert alert-success text-center" role="alert">
                                        <span><i class="fas fa-check-circle mr-2"></i><%= success %>
                                    </div>
                                    <% } %>

                                    <form action="" class="needs-validation" novalidate method="POST">
                                        <div class="form-group row">
                                            <label for="product_id" class="col-sm-2 col-form-label">รหัสสินค้าแบบกำหนดเอง</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg form-control form-control-lg-lg" name="product_id" id="product_id" placeholder="รหัสสินค้า (ถ้ามี)" value="<%= formData ? formData.product_id : '' %>" autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกรหัสสินค้าถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="product_name" class="col-sm-2 col-form-label required">ชื่อสินค้า</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg form-control form-control-lg-lg" name="product_name" id="product_name" placeholder="ชื่อสินค้า" value="<%= formData ? formData.product_name : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกชื่อสินค้าถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกชื่อสินค้าให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="product_price" class="col-sm-2 col-form-label required">ราคาสินค้า (รวมหน่วย)</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg form-control form-control-lg-lg" name="product_price" id="product_price" placeholder="0.00" value="<%= formData ? formData.product_price : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกราคาสินค้าถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกราคาสินค้าให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="product_unit_number" class="col-sm-2 col-form-label required">จำนวนหน่วยสินค้า (x1)</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control form-control-lg form-control form-control-lg-lg" name="product_unit_number" id="product_unit_number" placeholder="จำนวนหน่วยสินค้า (x1)" value="<%= formData ? formData.product_unit_number : '' %>" required autocomplete="off">
                                                <div class="valid-feedback">
                                                    กรอกจำนวนหน่วยสินค้าถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณากรอกจำนวนหน่วยสินค้าให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="cat_name_main" class="col-sm-2 col-form-label required">หมวดหมู่สินค้าหลัก</label>
                                            <div class="col-sm-10">
                                                <select class="form-control form-control-lg" name="cat_name_main" id="cat_name_main" required>
                                                    <option value="" selected disabled>เลือกหมวดหมู่สินค้าหลัก</option>
                                                    <% product_cats_main.forEach((product_cat_main) => { %>
                                                        <option value="<%= product_cat_main.cat_name_main %>"><%= product_cat_main.cat_name_main %></option>
                                                    <% }) %>
                                                </select>
                                                <div class="valid-feedback">เลือกหมวดหมู่สินค้าหลักถูกต้อง</div>
                                                <div class="invalid-feedback">กรุณาเลือกหมวดหมู่สินค้าหลักให้ถูกต้อง</div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="cat_name_sub" class="col-sm-2 col-form-label required">หมวดหมู่สินค้าย่อย</label>
                                            <div class="col-sm-10">
                                                <select class="form-control form-control-lg" name="cat_id" id="cat_name_sub" required>
                                                    <option value="" selected disabled>เลือกหมวดหมู่สินค้าย่อย</option>
                                                </select>
                                                <div class="valid-feedback">
                                                    เลือกหมวดหมู่สินค้าย่อยถูกต้อง
                                                </div>
                                                <div class="invalid-feedback">
                                                    กรุณาเลือกหมวดหมู่สินค้าย่อยให้ถูกต้อง
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <script>
                                            document.getElementById('cat_name_main').addEventListener('change', function() {
                                                const mainCategory = this.value;
                                                const subCategorySelect = document.getElementById('cat_name_sub');
                                                subCategorySelect.innerHTML = '<option value="" selected disabled>Loading...</option>';
                                        
                                                fetch(`/Role/Cashier/Page/Manage_Products/Add_Product/Get_Sub_Categories/${mainCategory}`)
                                                    .then(response => response.json())
                                                    .then(data => {
                                                        subCategorySelect.innerHTML = '<option value="" selected disabled>เลือกหมวดหมู่สินค้าย่อย</option>';
                                                        data.forEach(subCategory => {
                                                            const option = document.createElement('option');
                                                            option.value = subCategory.cat_id;
                                                            option.textContent = subCategory.cat_name_sub;
                                                            subCategorySelect.appendChild(option);
                                                        });
                                                    })
                                                    .catch(error => {
                                                        console.error('Error fetching subcategories:', error);
                                                        subCategorySelect.innerHTML = '<option value="" selected disabled>หมวดหมู่สินค้าย่อยไม่พร้อมใช้งาน</option>';
                                                    });
                                            });
                                        </script>
                                        
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <button type="submit" class="btn btn-custom-one btn-lg btn-block">บันทึกข้อมูล</button>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <button type="reset" class="btn btn-custom-two btn-lg btn-block">รีเซ็ตฟอร์ม</button>
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <div onclick="location.href='/Role/Cashier/Page/Manage_Products';" class="btn btn-custom-two btn-lg btn-block">ย้อนกลับ</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </section>
            <!-- Main content End -->
        </div>        
        <!-- Content Wrapper. Contains page content End -->

        <!-- Footer -->
        <%- include('../../Include/Footer.ejs') %>
        <!-- Footer End -->

    </div>
    <!-- Wrapper End -->

    <!-- Javascript -->
    <%- include('../../Include/Javascript.ejs') %>
    <!-- Javascript End -->
</body>
</html>